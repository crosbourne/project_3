<% @results %>
  <% @results.to_a.each do |result| %>
    <p>
    <div class="album_container"> 

        <%#= result.description.try(:html_safe) %>
        <% if result.image.present? %>
        <%= image_tag(result.image["small_url"], height: '160', width: '110', class: "album_float_left") %><br>
        <% else %>
        <%= image_tag("no_comic_cover.jpg", height: '160', width: '110', class: "album_float_left")  %><br>
        <% end %>
    </p>

        <div class="album_float_right">
            <strong><%= result.name %></strong>
        </div>
    </div>
<% end %>



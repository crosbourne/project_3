<h1>BROWSE</h1>

<form action="/search" method="get">
  <input name="search" type="search"> 
</form>

<% if @results %>
<% @results.each do |result| %>
<p>
  <%= result.name %>
  <%#= result.description.try(:html_safe) %><br>
  <% if result.image.present? %>
  <%= image_tag(result.image["thumb_url"]) %><br>
  <% else %>
  <%= image_tag("no_comic_cover.jpg", height: '160', width: '105')  %><br>
  <% end %>
  issue #<%= result.first_appeared_in_issue.try :issue_number %><br>
</p>
<% end %>
<% end %>





<h1>MOVIE</h1>



      <p>

        <% @movies.to_a.each do |movie| %>
        <%= movie.name %>
        <%#= movie.description.try(:html_safe) %><br>
        <% if movie.image.present? %>
        <%= image_tag(movie.image["small_url"], height: '160', width: '110') %><br>
        <% else %>
        <%= image_tag("no_comic_cover.jpg", height: '160', width: '110')  %><br>
        <% end %>
        <% end %>
        </p>

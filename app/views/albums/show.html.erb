<div>
<h1> <%= @album.name %></h1>
</div>

<p>
  <% if @album.album_image.present? %>
  <%= link_to image_tag(@album.album_image.url, height: '400', width: '1000', class: "album_splash"), @album %>
  <% else %>
  <%= link_to image_tag("no_album_splash.jpg", height: '300', width: '1000', class: "album_splash"), @album %>
  <% end %>
</p>

<div class="album_blurb">
  <strong><p class="album_title"><%= @album.title %></strong></p>
  <p>
    <%= @album.description %><br><br>
  </p>
</div>

<p class="album_heading">
  <strong><%= @album.heading %></strong><br>
</p>





<% @album.comics.each do |comic| %>
<div class="comic_container">
  <span>
    <%= comic.description %><br>
  </span>  

  <div class="float_left">
    <% if comic.comic_image.present? %>
    <%= link_to image_tag(comic.comic_image.url, height: '160', width: '105'), comic %><br>
    <% else %>
    <%= link_to image_tag("no_comic_cover.jpg", height: '160', width: '105'), comic %><br>
    <% end %>
    <strong><%= comic.name %></strong><br>
    issue #<%= comic.issue_number  %><br>
  <% end %>
  </div>
</div>

<%= link_to 'Back', discover_path  %>



<p>
  <%= @album.name %><br>
  <%= link_to image_tag(@album.album_image.detail.url, height: '300', width: '500'), @album.album_image.detail.url %><br>
  <%= @album.description %>
</p>


<% @album.comics.each do |comic| %>
  <p>
    <!-- <strong>Name:</strong> -->
    <%= link_to comic.name, comic %><br>
    <%= comic.description %><br>
    <%= link_to image_tag(comic.comic_image.thumb.url), comic.comic_image.detail.url %><br>
    issue #<%= comic.issue_number %><br>
  </p>
  <% end %>

<%= link_to 'Back', user_path(current_user)  %>


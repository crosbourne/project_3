<h1>ALBUMS</h1>

<nav>
  <div class="row">
    <div class="large-12 columns">
      <ul class="large-block-grid-4">
        <% @albums.each do |album| %>

        <li class="block-grid-item"> 
          <div class="user_content">
         
            <%=link_to album.name, album %>

            
          </div>


          <%= link_to image_tag(album.album_image.url), album %>

          <%#= album.user.name %>
          <%#= link_to 'Show', album %>
          <%= link_to 'Edit', edit_album_path(album) if can? :edit, album %>
          <%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } if can?(:destroy, album)%>

        <% end %>

      </ul>
    </div>
  </div>  

</nav>

<%= link_to 'New Album', new_album_path if can? :create, Album %>

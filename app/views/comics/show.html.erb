<%#= link_to image_tag("back.png", height: '30', width: '30', class: "back"), @comic.album %> 
<h1> <%= @comic.name %></h1>  



<div class="comic_container">
  <div class="album_float_right">
    <strong><%= @comic.comic_heading %></strong><br>
    <%= @comic.description %><br>
  </div>

  <div class="album_float_left">
      <% if @comic.comic_image.present? %>
      <%= image_tag(@comic.comic_image.url, height: '230', width: '175') %><br>
      <% else %>
      <%= image_tag("no_comic_cover.jpg", height: '230', width: '175') %><br>
      <% end %>
    </end>
    <strong><%= @comic.name %></strong><br>
    issue #<%= @comic.issue_number  %><br><br>
  </div>
</div>

<%#= @comic.album.album_image.url %>

<p>

  <% if @comic.album.album_image.present? %>
  <%= link_to image_tag(@album.album_image.url, height: '110', width: '110'), @comic.album %><br>
  <% else %>
  <%= link_to image_tag("no_album_cover.jpg", height: '110', width: '110'), @comic.album %><br>
  <% end %>
  <%= @comic.album.name %><br>
</p>

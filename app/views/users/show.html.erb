<div class="module">
  <div>
    <h2>Hello <%= @user.first_name%></h2>
  </div>
  <div>
    <% if @user.user_avatar.present? %>
    <%= link_to image_tag(@user.user_avatar.thumb.url), @user.user_avatar.detail.url %>
    <% else %>
    <%= link_to image_tag("no_photo_small.jpg", height: '32', width: '32') %>
    <% end %>
  </div>
  <div>
    <%= link_to "Edit Profile", edit_user_path  %><br>
    <%= link_to "Change Password", edit_user_registration_path %><br>
    <%= link_to "Log out", destroy_user_session_path, method: :delete %><br>
  </div>  

  <div>
    <%= link_to 'Add New Album', new_album_path %>
    <%= link_to 'Add New Comic', new_comic_path %>
  </div>


<% @user.comics.each do |comic| %>
  <p>
    <!-- <strong>Name:</strong> -->
    <%= comic.name %><br>
    <%= comic.description %><br>
    <%= link_to image_tag(comic.comic_image.thumb.url), comic.comic_image.detail.url %>
  </p>
  <% end %>

  <% @user.albums.each do |album| %>
    <p>
      <!-- <strong>Name:</strong> -->
      <%= album.name %><br>
      <%= album.description %><br>
      <%= link_to image_tag(album.album_image.thumb.url), album.album_image.detail.url %>
    </p>
    <% end %>




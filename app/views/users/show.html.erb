<div class="module">
  <div>
    <h2>Hello <%= @user.first_name%></h2>
  </div>
  <div>
    <% if @user.user_avatar.present? %>
    <%= link_to image_tag(@user.user_avatar.thumb.url), @user.user_avatar.detail.url %>
    <% else %>
    <%= link_to image_tag("no_photo_small.jpg", height: '32', width: '32') %>
    <% end %>
  </div>
  <div>
    <%= link_to "Edit Profile", edit_user_path  %><br>
    <%= link_to "Change Password", edit_user_registration_path %><br>
    <%= link_to "Log out", destroy_user_session_path, method: :delete %><br>
  </div>  

  <div>
    <%= link_to 'Add New Album', new_album_path %>
    <%= link_to 'Add New Comic', new_comic_path %>
  </div>


<% @user.comics.each do |comic| %>
  <p>
    <!-- <strong>Name:</strong> -->
    <%= link_to comic.name, comic %><br>
    <%= comic.description %><br>
    issue #<%= comic.issue_number %><br>
    <%= link_to image_tag(comic.comic_image.thumb.url), comic %><br>
    <%= link_to 'Edit', edit_comic_path(comic) if can? :edit, comic %>
    <%= link_to 'Destroy', comic, method: :delete, data: { confirm: 'Are you sure?' } if can?(:destroy, comic)%>
  </p>
  <% end %>

  <% @user.albums.each do |album| %>
    <p>
      <!-- <strong>Name:</strong> -->
      <%= link_to album.name, album %><br>
      <%= album.description %><br>
      <%= link_to image_tag(album.album_image.thumb.url), album %><br>
      <%= link_to 'Edit', edit_album_path(album) if can? :edit, album %>
      <%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } if can?(:destroy, album)%>
    </p>
    <% end %>



